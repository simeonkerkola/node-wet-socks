<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{pageTitle}}</title>
  </head>
  <body>
    <p>Fetch this weeks weather
      <form action="/">
        <input type="text" name="address" placeholder="{{placeholder}}">
        <button type="submit">fetch</button>
      </form>

      <script src="./../js/jquery-3.2.1.min.js"></script>
      <script src="./../js/index.js"></script>
    </p>
    <div class="weather">
      <p>{{address}}</p>
      <p>{{localTime}}</p>
      <p>{{summary}}</p>

      <p>
        <ul>
          <li>It's currently: {{temperature}}°C</li>
          <li>It feels like: {{apparentTemperature}}°C</li>
          <li>Chance of rain: {{precipProbability}}%</li>
          <li>Humidity: {{humidity}}%</li>
          <li>Cloud coverage: {{cloudCover}}%</li>
          <li>Pressure: {{pressure}}</li>
        </ul>

        {{#if showWeekly}}
          <p>Hourly forecast</p>
            {{#each hourlyWeather}}
              <ul>
                <p>{{this.time}}</p>
                <p>{{this.summary}}</p>

                <li>Temperature: {{this.temp}}°C</li>
                <li>Chance of rain: {{this.precipProbability}}%</li>
                <li>Cloud cover: {{this.cloudCover}}%</li>

              </ul>
            {{/each}}
          {{/if}}
        {{ errorMessage}}

      </p>
    </div>
  </body>
</html>