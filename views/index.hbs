<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{pageTitle}}</title>
    <link rel='stylesheet' href='/bootstrap-3.3.7-dist/css/bootstrap.min.css' />
      <link rel='stylesheet' href='/bootstrap-3.3.7-dist/css/custom.css' />
  </head>
  <body>
    <div class="container">
      <h1>{{pageTitle}}</h1>
      <h3>Fetch this weeks weather</h3>
      <form action="/" class="form-inline">
        <div class="form-group">
          <input type="text" class="form-control" name="address" placeholder="{{placeholder}}">
        </div>
        <button type="submit" class="btn btn-info">fetch</button>
      </form>

      {{#unless errorMessage}}

        <h4>{{address}}</h4>
        <p>{{localTime.day}} {{localTime.date}} {{localTime.month}}, {{localTime.hours}}:{{localTime.minutes}}</p>
        <p>{{summary}}</p>

        <p>
          <ul class="list-group">
            <li class="list-group-item">It's currently: {{temperature}}°C</li>
            <li class="list-group-item">It feels like: {{apparentTemperature}}°C</li>
            <li class="list-group-item">Chance of rain: {{precipProbability}}%</li>
            <li class="list-group-item">Humidity: {{humidity}}%</li>
            <li class="list-group-item">Cloud coverage: {{cloudCover}}%</li>
            <li class="list-group-item">Pressure: {{pressure}}</li>
          </ul>

        <p>Hourly forecast</p>

        {{#if showWeekly}}

          <table class="table table-hover">

            {{#each hourlyWeather}}

              <ul class="list-group">
                <p>{{this.timeByHour.day}} {{this.timeByHour.date}}, {{this.timeByHour.hours}}:{{this.timeByHour.minutes}}</p>
                <p>{{this.summary}}</p>
                <li class="list-group-item">Temperature: {{this.temp}}°C</li>
                <li class="list-group-item">Chance of rain: {{this.precipProbability}}%</li>
                <li class="list-group-item">Cloud cover: {{this.cloudCover}}%</li>
              </ul>

            {{/each}}

          </table>

        {{/if}}

      {{/unless}}
      </p>
    </div>
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script src="/js/index.js"></script>
  </body>
</html>